<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
<body>
  <%- include('./partials/nav.ejs') %>
  <h1>Edit Post</h1>
  <form id="post-form" method="post" action="/posts/<%= post.id %>?_method=PUT" enctype="multipart/form-data">
    <div class="form-info">
      <label>Post Title
        <input type="text" name="title" value="<%= post.title %>" required>
      </label>
      <label>Image
        <input type="file" name="image" accept="image/*">
      </label>
    </div>
    <div class="form-text">
      <label>Post Content 
        <textarea name="content" required><%= post.content %></textarea> 
      </label>
    </div>
    <div class="form-button">
      <input type="submit" value="Update Post">
    </div>
  </form>
</body>
</html>
